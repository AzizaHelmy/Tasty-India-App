<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/card_image" />
            <KeyAttribute
                android:scaleX="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/card_image" />
            <KeyAttribute
                android:scaleY="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/card_image" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero_dimens" />
        <Constraint
            android:id="@+id/scrollView2"
            android:layout_width="@dimen/zero_dimens"
            android:layout_height="@dimen/zero_dimens"
            android:layout_marginTop="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            motion:layout_constraintEnd_toEndOf="@id/guideline_end"
            motion:layout_constraintStart_toStartOf="@id/guideline_start"
            motion:layout_constraintTop_toBottomOf="@id/card_image" />
    </ConstraintSet>
</MotionScene>