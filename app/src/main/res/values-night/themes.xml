<resources>

    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">

        <item name="android:fitsSystemWindows">true</item>

        <!-- Splash Screen-->
        <item name="android:windowSplashScreenBackground">@color/primary_400</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_splash</item>
    </style>

    <style name="CategoriesCardImageStyle">
        <item name="cornerSize">16dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ThemeOverlay.search" parent="Widget.AppCompat.SearchView">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black_60</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white_200</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="homeRecommendationCardImageStyle">
        <item name="cornerSize">24dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>