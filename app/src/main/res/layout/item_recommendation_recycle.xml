<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_home_recommendation"
        style="@style/home_recycle_header_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommendations_tv"
        android:paddingStart="@dimen/padding_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_home_recommendation_see_all"
        style="@style/TextStyleSeeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all_tv"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_see_all"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_recommendation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_home_recommendation" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_recommendations"
        style="@style/HomeRecycleViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_medium"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_recommendation"
        tools:listitem="@layout/item_home_recommendations"/>
</androidx.constraintlayout.widget.ConstraintLayout>