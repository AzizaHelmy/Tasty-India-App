<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:backgroundTint="@color/white_300"
    app:cardCornerRadius="@dimen/radius_medium"
    android:layout_margin="@dimen/margin_tiny"
    app:strokeWidth="0dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/CategoriesCardImageStyle"
        app:srcCompat="@drawable/image_recipe" />

    <View
        android:id="@+id/view_gradiant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_gradiant" />

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginVertical="@dimen/margin_large"
        android:fontFamily="@font/ubuntu_medium"
        android:text="@string/masala_karela"
        android:textColor="@color/white_100"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/tv_recipe_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginVertical="@dimen/margin_tiny"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/indian"
        android:textColor="@color/white_100"
        android:textSize="@dimen/text_small" />
</com.google.android.material.card.MaterialCardView>
