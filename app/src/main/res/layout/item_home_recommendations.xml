<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_small"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_home_recommendation_recipe_image"
                android:layout_width="150dp"
                android:layout_height="165dp"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/headerStyle"
                android:id="@+id/tv_home_recommendation_recipe_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginHorizontal="@dimen/margin_tiny"
                android:fontFamily="@font/ubuntu_regular"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:text="Creamy Pasta"
                android:textSize="@dimen/text_medium" />

            <TextView
                style="@style/headerStyle"
                android:id="@+id/tv_home_recommendation_kitchen_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginHorizontal="@dimen/margin_tiny"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Indian Cusine"
                android:textSize="@dimen/text_tiny" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


